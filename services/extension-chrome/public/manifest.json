{
    "manifest_version": 2,
    "name": "WhatsPlus",
    "version": "0.1",
    "content_scripts": [
        {
          "matches": ["https://web.whatsapp.com/*"],
          "js": ["content.js"],
          "css": ["content.css"]
        }
    ],
    "background" : {
        "persistent": false,
        "scripts" : ["background.js"]
    },
    "browser_action": {},
    "web_accessible_resources" : ["ui/*", "button.png"],
    "permissions": ["activeTab", "alarms"]
}