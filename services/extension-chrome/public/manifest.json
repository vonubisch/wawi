{
    "manifest_version": 2,
    "name": "WATurbo",
    "version": "0.3",
    "content_scripts": [
        {
          "matches": ["https://web.whatsapp.com/*"],
          "js": ["content.js"],
          "css": ["content.css"]
        }
    ],
    "background" : {
        "persistent": false,
        "scripts" : ["background.js"]
    },
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
    },
    "browser_action": {},
    "web_accessible_resources" : ["ui/*", "ui_logo.png", "button.png", "theme-dark.css"],
    "permissions": ["activeTab", "alarms"]
}